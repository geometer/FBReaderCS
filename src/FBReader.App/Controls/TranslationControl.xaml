<UserControl x:Class="FBReader.App.Controls.TranslationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
    x:Name="TranslationControlRoot"
             Tap="TranslationControl_OnTap">
    
    <Grid Background="Transparent">
    
        <Border Background="#D0000000" 
                BorderThickness="1"
                BorderBrush="Black"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                x:Name="Border">
            <TextBlock Margin="24"
                       TextWrapping="Wrap"
                       Text="{Binding ElementName=TranslationControlRoot, Path=Text}"
                       Foreground="White"
                       FontSize="18"/>
        </Border>
    </Grid>
</UserControl>